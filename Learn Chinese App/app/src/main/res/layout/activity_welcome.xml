<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cream"
    tools:context=".Screens.Welcome">

    <ImageView
        android:layout_width="97dp"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-18dp"
        android:src="@drawable/main_top" />

    <ImageView
        android:layout_width="97dp"
        android:layout_height="153dp"
       android:layout_alignParentBottom="true"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-18dp"
        android:src="@drawable/main_bottom" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets learn chinese"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_above="@id/svg"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/svg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/chat"
        android:layout_centerInParent="true"/>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@id/svg"
        android:id="@+id/to_login"
        app:cardCornerRadius="25sp"
        app:cardBackgroundColor="@color/dark_brown"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:layout_marginVertical="15sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_login"
        android:layout_marginTop="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="25dp"
        android:id="@+id/signup"
        app:cardBackgroundColor="@color/brown"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="20sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/regular"
            android:layout_marginVertical="15sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>